<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.edwardyu.gesturerecognizer.gesturerecognizerapp.MainActivity">

    <TextView
        android:id="@+id/welcome_textview"
        android:text="@string/welcome"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/explanation_textview"
        android:text="@string/explanation"
        android:textSize="15sp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_below="@+id/welcome_textview"
        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/measuring_button"
        android:text="Start/Stop Measuring"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/explanation_textview"
        android:layout_marginTop="10dp"
        android:onClick="toggleMeasuring"
        />

    <TextView
        android:id="@+id/description"
        android:text="[Insert Description of Run]"
        android:textSize="15sp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_below="@+id/measuring_button"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/guess"
        android:text="[Insert Guess of Run]"
        android:textSize="15sp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_below="@+id/description"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/dtwDist"
        android:text="[Insert DTW Dist of Run]"
        android:textSize="15sp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_below="@+id/guess"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>
